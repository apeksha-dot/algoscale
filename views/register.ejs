<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                 Register
            </h1>
        <%- include("./partials/messages") %>
      
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="userId">User Id</label>
                    <input type="name" id="name" name="userId" class="form-control" placeholder="Enter User Id"
                        value="<%= typeof userId != 'undefined' ? userId : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
               
                <button type="submit" class="btn btn-success btn-block">
                    Register
                </button>
            </form>
            <p class="blackquote mb-0">Have An Account? <a href="/users/login">Login</a></p>
        </div>
    </div>
</div>